[alias]
    fp      = fetch --prune
    rhh     = reset --hard HEAD
    co      = checkout
    br      = branch
    ci      = commit
    st      = status
    unstage = reset HEAD --
    last    = log -1 HEAD
    ls      = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset) - ''%s%C(reset) %C(red)%an%C(reset)' --all
    lsh     = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset) - ''%s%C(reset) %C(red)%an%C(reset)' -20
    diffcm  = diff --color-moved
[core]
    safecrlf = true
    editor = nvim
    autocrlf = false
[color]
    ui = true
[push]
    default = simple
[rebase]
    autosquash = true
